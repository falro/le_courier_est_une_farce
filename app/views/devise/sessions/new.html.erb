<div class="containerTitleForm">
  <h1 class="titleForm">Connexion</h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
 
  <!-- Email user -->
  <div class="field">
    <div class="titleForLabelOnForm">
      <%= f.label :email %><br />
    </div>
    <div class="containerTextfieldForm">
      <%= f.email_field :email, autofocus: true, class: 'textfieldForForm' %>
    </div>
  </div>

  <div class="field">
    <div class="titleForLabelOnForm">
      <%= f.label :password %><br />
    </div>
    <div class="containerTextfieldForm">
      <%= f.password_field :password, autocomplete: "off", class: 'textfieldForForm'%>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="containerTextfieldForm">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <div class="containerTextfieldForm">
    </div>
  <% end -%>
  
  <div class="containerTextfieldForm">
    <div class="actions">
      <%= f.submit "Connexion", class: 'buttonForm' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
